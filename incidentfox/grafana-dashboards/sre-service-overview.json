{
  "dashboard": {
    "id": null,
    "uid": "sre-service-overview",
    "title": "SRE Service Overview - RED Metrics",
    "description": "Service Level Indicators: Rate, Errors, Duration for all services",
    "tags": ["sre", "opentelemetry", "red-metrics"],
    "timezone": "browser",
    "schemaVersion": 39,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": "label_values(traces_span_metrics_calls_total, service_name)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Overview",
        "type": "stat",
        "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.01 },
                { "color": "red", "value": 0.05 }
              ]
            },
            "unit": "percentunit",
            "color": { "mode": "thresholds" }
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "none"
        },
        "targets": [
          {
            "expr": "sum(rate(traces_span_metrics_calls_total{status_code=\"STATUS_CODE_ERROR\", service_name=~\"$service\"}[5m])) / sum(rate(traces_span_metrics_calls_total{service_name=~\"$service\"}[5m]))",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Rate by Service (req/s)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": { "mode": "none" }
            },
            "color": { "mode": "palette-classic" },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] },
          "tooltip": { "mode": "multi", "sort": "desc" }
        },
        "targets": [
          {
            "expr": "sum by (service_name) (rate(traces_span_metrics_calls_total{span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[5m]))",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate by Service (%)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "color": { "mode": "palette-classic" },
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.01 },
                { "color": "red", "value": 0.05 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] },
          "tooltip": { "mode": "multi", "sort": "desc" }
        },
        "targets": [
          {
            "expr": "sum by (service_name) (rate(traces_span_metrics_calls_total{status_code=\"STATUS_CODE_ERROR\", span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[5m])) / sum by (service_name) (rate(traces_span_metrics_calls_total{span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[5m]))",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "P99 Latency by Service (ms)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false
            },
            "color": { "mode": "palette-classic" },
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 500 },
                { "color": "red", "value": 1000 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] },
          "tooltip": { "mode": "multi", "sort": "desc" }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum by (service_name, le) (rate(traces_span_metrics_duration_milliseconds_bucket{span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[5m])))",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "P50 Latency by Service (ms)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "color": { "mode": "palette-classic" },
            "unit": "ms"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] },
          "tooltip": { "mode": "multi", "sort": "desc" }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by (service_name, le) (rate(traces_span_metrics_duration_milliseconds_bucket{span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[5m])))",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Service Dependency Calls (Client → Server)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "lineWidth": 1,
              "fillOpacity": 50,
              "stacking": { "mode": "normal" }
            },
            "color": { "mode": "palette-classic" },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] },
          "tooltip": { "mode": "multi", "sort": "desc" }
        },
        "targets": [
          {
            "expr": "sum by (service_name, span_name) (rate(traces_span_metrics_calls_total{span_kind=\"SPAN_KIND_CLIENT\", service_name=~\"$service\"}[5m])) > 0",
            "legendFormat": "{{service_name}} → {{span_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Total Requests per Service (Last Hour)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum by (service_name) (increase(traces_span_metrics_calls_total{span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[1h]))",
            "legendFormat": "{{service_name}}",
            "refId": "A",
            "instant": true
          }
        ]
      },
      {
        "id": 8,
        "title": "Error Count per Service (Last Hour)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum by (service_name) (increase(traces_span_metrics_calls_total{status_code=\"STATUS_CODE_ERROR\", span_kind=\"SPAN_KIND_SERVER\", service_name=~\"$service\"}[1h]))",
            "legendFormat": "{{service_name}}",
            "refId": "A",
            "instant": true
          }
        ]
      }
    ]
  },
  "folderUid": "sre-dashboards",
  "overwrite": true
}
