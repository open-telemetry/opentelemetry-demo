{
  "dashboard": {
    "id": null,
    "uid": "sre-kubernetes-infra",
    "title": "SRE Kubernetes Infrastructure",
    "description": "Container CPU, Memory, Network metrics for all pods",
    "tags": ["sre", "kubernetes", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 39,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "query": "label_values(container_cpu_usage_seconds_total, namespace)",
          "refresh": 2,
          "current": { "text": "otel-demo", "value": "otel-demo" }
        },
        {
          "name": "pod",
          "type": "query",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "query": "label_values(container_cpu_usage_seconds_total{namespace=\"$namespace\"}, pod)",
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "current": { "text": "All", "value": "$__all" }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Pod Resource Overview",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
        "collapsed": false
      },
      {
        "id": 2,
        "title": "CPU Usage by Pod",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
            "color": { "mode": "palette-classic" },
            "unit": "percentunit"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
        },
        "targets": [{
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"$pod\", container!=\"\"}[5m]))",
          "legendFormat": "{{pod}}"
        }]
      },
      {
        "id": 3,
        "title": "Memory Usage by Pod",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
            "color": { "mode": "palette-classic" },
            "unit": "bytes"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
        },
        "targets": [{
          "expr": "sum by (pod) (container_memory_working_set_bytes{namespace=\"$namespace\", pod=~\"$pod\", container!=\"\"})",
          "legendFormat": "{{pod}}"
        }]
      },
      {
        "id": 4,
        "title": "Network I/O",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
        "collapsed": false
      },
      {
        "id": 5,
        "title": "Network Receive (bytes/s)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
            "color": { "mode": "palette-classic" },
            "unit": "Bps"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
        },
        "targets": [{
          "expr": "sum by (pod) (rate(container_network_receive_bytes_total{namespace=\"$namespace\", pod=~\"$pod\"}[5m]))",
          "legendFormat": "{{pod}}"
        }]
      },
      {
        "id": 6,
        "title": "Network Transmit (bytes/s)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
            "color": { "mode": "palette-classic" },
            "unit": "Bps"
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
        },
        "targets": [{
          "expr": "sum by (pod) (rate(container_network_transmit_bytes_total{namespace=\"$namespace\", pod=~\"$pod\"}[5m]))",
          "legendFormat": "{{pod}}"
        }]
      },
      {
        "id": 7,
        "title": "Container Health",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
        "collapsed": false
      },
      {
        "id": 8,
        "title": "Container Restarts",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "bars", "lineWidth": 1, "fillOpacity": 50 },
            "color": { "mode": "thresholds" },
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] }
        },
        "targets": [{
          "expr": "sum by (pod) (increase(container_oom_events_total{namespace=\"$namespace\", pod=~\"$pod\"}[1h]))",
          "legendFormat": "{{pod}} OOM"
        }]
      },
      {
        "id": 9,
        "title": "CPU Throttling",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
            "color": { "mode": "thresholds" },
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.1 },
                { "color": "red", "value": 0.25 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] }
        },
        "targets": [{
          "expr": "sum by (pod) (rate(container_cpu_cfs_throttled_periods_total{namespace=\"$namespace\", pod=~\"$pod\"}[5m])) / sum by (pod) (rate(container_cpu_cfs_periods_total{namespace=\"$namespace\", pod=~\"$pod\"}[5m]))",
          "legendFormat": "{{pod}}"
        }]
      },
      {
        "id": 10,
        "title": "Top Resource Consumers",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
        "collapsed": false
      },
      {
        "id": 11,
        "title": "Top CPU Consumers (Current)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "percentunit",
            "max": 1
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "targets": [{
          "expr": "topk(10, sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", container!=\"\"}[5m])))",
          "legendFormat": "{{pod}}",
          "instant": true
        }]
      },
      {
        "id": 12,
        "title": "Top Memory Consumers (Current)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "bytes"
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "targets": [{
          "expr": "topk(10, sum by (pod) (container_memory_working_set_bytes{namespace=\"$namespace\", container!=\"\"}))",
          "legendFormat": "{{pod}}",
          "instant": true
        }]
      }
    ]
  },
  "folderUid": "sre-dashboards",
  "overwrite": true
}
